func printf(format: String, arguments: Int, ...) #foreign; 

single :: "%d argument is given.\n";
plural :: "%d arguments are given.\n";

func main(count: Int, arguments: Int8**) -> Int {

    b : Int = count; 
    a : Int = b + 0; // just using count in an expression doesn't work

    if (a == 1) {
        printf(single, a);
    }
    else {
        printf(plural, a);
    }
    return 0;
}
